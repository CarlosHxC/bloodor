rosa = #dd4359
azul = #48bbc1

/*
* FUENTES
*/
@font-face
  font-family: Mockup
  src: url("../rsc/fonts/Mockup-Regular.otf") format ("opentype")

@font-face
  font-family: Fabada
  src: url("../rsc/fonts/Fabada-regular.otf") format ("opentype")

*
  font-family: "Mockup"

html,
body
  height: 100%
  
#header
    .large-2 
        p
            margin-top 12px
            color #FFF
.background-img
  background-position: 50% 50%
  width: 100%
  min-height: 100%
  background-size: cover

#logo
  font-family: "Fabada"
  color: #dd4359
  font-size: 30px

#logo span
  font-family: inherit
  color: #2d2d2d

p
  margin-bottom: 0 !important

.frase1
  font-family: "Fabada"
  font-size: 40px
  color: #f2f2f2

#text-descripcion
  margin-top: 2.5%

.frase2
  font-size: 30px
  color: #f2f2f2
  line-height: 1.2

#row-botones
  margin-top: 2%

#btn-solicitar
  float: right
  background-color: transparent !important
  border: 4px solid #dd3459 !important
  border-radius: 19px
  color: #dd3459
  font-family: "Mockup"
  font-size: 24px
  height: 50px
  padding-top: 0.5rem

#btn-registro
  background-color: transparent !important
  border: 4px solid #48bbc1 !important
  border-radius: 19px
  color: #48bbc1
  font-family: "Mockup"
  font-size: 24px
  height: 50px
  padding-top: 0.5rem

/*Seccion solicitar*/
#solicitar
  background-color: white
  height: 500px

#solicitar .row .small-12 p
  text-align: center
  font-size: 22px
  color: #2d2d2d2
  margin-top: 6% !important

#bg-solicitar
  background-color: #e5e5e5
  padding-top: 2%

.p-form-solicitud
  font-size: 14px !important
  color: #2d2d2d
  float: right

#solicitar .row #bg-solicitar .row .large-9 input
  border: none
  border-radius: 16px
  height: 2.2em

#solicitar .row #bg-solicitar .row .large-3 input
  border: none
  border-radius: 16px
  height: 2.2em
  float: left

#input-donadores
  width: 10%
  min-width: 100px

#btn-form-solicitar
  font-family: "Mockup"
  font-size: 16px
  border-radius: 18px
  width: 175px
  height: 48px
  background-color: #48bbc1

.sel-form-sangre
  width: 20%
  min-width 28px
  max-width 32px
  float: left
  margin-right 10px
  border 1px solid rosa
  img 
    width 90%
  &:hover
      background-color rosa
        
.active
  background-color rosa

  img
    color white

/*Seccion registro*/
#registro
  background-color: #dd4359
  .row .large-10
      margin-top 4%
    .row .small-12 p
        color #FFF
  
#registro .row .small-12 p
  text-align: center
  font-size: 22px
  color: #2d2d2d2
  margin-top: 6% !important
  
#registro .row .large-10 .row .large-9 input
  border: none
  border-radius: 16px
  height: 2.2em

#registro .row .large-10 .row .large-3 input
  border: none
  border-radius: 16px
  height: 2.2em
  float: left
  
#registro .row .large-10 .row .large-3 p
    font-size 14px
    color #FFF
    text-align right
    margin-top 3px !important

